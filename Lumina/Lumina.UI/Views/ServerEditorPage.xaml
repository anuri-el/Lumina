<Page x:Class="Lumina.UI.Views.ServerEditorPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Lumina.UI.ViewModels"
        mc:Ignorable="d"
        Title="Server Editor" Height="700" Width="1000">
    <Page.DataContext>
        <vm:ServerEditorViewModel/>
    </Page.DataContext>

    <Grid Background="#1e1e1e">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>

        <!-- Верхня панель з підключенням -->
        <Border Grid.Row="0" Background="#2d2d30" BorderBrush="#3e3e42" BorderThickness="0,0,0,1">
            <Grid Margin="20,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="🌐 Server Connection" 
                           FontSize="20" FontWeight="Bold" Foreground="White"
                           VerticalAlignment="Center" Grid.Column="0"/>

                <StackPanel Orientation="Horizontal" Grid.Column="1" 
                            HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Ellipse Width="12" Height="12" Margin="0,0,10,0">
                        <Ellipse.Style>
                            <Style TargetType="Ellipse">
                                <Setter Property="Fill" Value="Red"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                        <Setter Property="Fill" Value="LimeGreen"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Ellipse.Style>
                    </Ellipse>
                    <TextBlock Text="{Binding ConnectionStatus}" 
                               FontSize="14" Foreground="#999" VerticalAlignment="Center"/>
                </StackPanel>

                <Button Content="🔌 Connect" 
                        Command="{Binding ConnectToServerCommand}"
                        Background="#007acc" Foreground="White"
                        Height="35" Width="120" FontWeight="SemiBold"
                        Grid.Column="2"/>
            </Grid>
        </Border>

        <!-- Основна робоча область -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="250"/>
            </Grid.ColumnDefinitions>

            <!-- Ліва панель - Операції -->
            <Border Grid.Column="0" Background="#2d2d30" CornerRadius="5" Margin="0,0,5,0">
                <StackPanel Margin="10">
                    <TextBlock Text="Server Operations" FontSize="16" FontWeight="Bold" 
                               Foreground="White" Margin="0,0,0,15"/>

                    <TextBlock Text="Images" Foreground="#999" FontSize="12" Margin="0,5,0,5"/>
                    <Button Content="📤 Upload Image" 
                            Command="{Binding UploadImageCommand}"
                            Height="35" Margin="0,0,0,5"/>
                    <Button Content="🔄 Refresh Images" 
                            Command="{Binding LoadImagesCommand}"
                            Height="35" Margin="0,0,0,15"/>

                    <TextBlock Text="Collages" Foreground="#999" FontSize="12" Margin="0,5,0,5"/>
                    <Button Content="➕ New Collage" 
                            Command="{Binding CreateCollageCommand}"
                            Height="35" Margin="0,0,0,5"/>
                    <Button Content="🔄 Refresh Collages" 
                            Command="{Binding LoadCollagesCommand}"
                            Height="35" Margin="0,0,0,5"/>
                    <Button Content="💾 Save Collage" 
                            Command="{Binding SaveCollageCommand}"
                            Height="35" Margin="0,0,0,15" Background="#28a745" Foreground="White"/>

                    <TextBlock Text="Current Collage ID:" Foreground="#999" FontSize="12" Margin="0,10,0,5"/>
                    <TextBlock Text="{Binding CurrentCollageId, TargetNullValue='None'}" 
                               Foreground="White" FontSize="14" FontWeight="Bold"/>
                </StackPanel>
            </Border>

            <!-- Центральна панель - Список зображень на сервері -->
            <Border Grid.Column="1" Background="#252526" CornerRadius="5" Margin="5,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="📁 Server Images" 
                               FontSize="16" FontWeight="Bold" Foreground="White"
                               Margin="15,10" Grid.Row="0"/>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding ServerImages}" Margin="10">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#2d2d30" CornerRadius="5" 
                                            Margin="0,0,0,5" Padding="10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="40"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Text="🖼️" FontSize="24" 
                                                       VerticalAlignment="Center" Grid.Column="0"/>

                                            <StackPanel Grid.Column="1" Margin="10,0" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding FilePath}" 
                                                           Foreground="White" FontWeight="SemiBold"/>
                                                <TextBlock Foreground="#999" FontSize="11">
                                                    <Run Text="ID:"/>
                                                    <Run Text="{Binding Id}"/>
                                                    <Run Text=" | Format:"/>
                                                    <Run Text="{Binding Format}"/>
                                                </TextBlock>
                                            </StackPanel>

                                            <TextBlock Text="{Binding CreatedAt, StringFormat='{}{0:g}'}" 
                                                       Foreground="#666" FontSize="10"
                                                       VerticalAlignment="Center" Grid.Column="2"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Права панель - Колажі -->
            <Border Grid.Column="2" Background="#252526" CornerRadius="5" Margin="5,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="🎨 Server Collages" 
                               FontSize="16" FontWeight="Bold" Foreground="White"
                               Margin="15,10" Grid.Row="0"/>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding ServerCollages}" Margin="10">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#2d2d30" CornerRadius="5" 
                                            Margin="0,0,0,5" Padding="10">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Title}" 
                                                       Foreground="White" FontWeight="SemiBold"/>
                                            <TextBlock Foreground="#999" FontSize="11">
                                                <Run Text="ID:"/>
                                                <Run Text="{Binding Id}"/>
                                                <Run Text=" | Size:"/>
                                                <Run Text="{Binding Width}"/>
                                                <Run Text="x"/>
                                                <Run Text="{Binding Height}"/>
                                            </TextBlock>
                                            <TextBlock Foreground="#666" FontSize="11">
                                                <Run Text="Layers:"/>
                                                <Run Text="{Binding Layers.Count}"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <!-- Нижня панель - Логи -->
        <Border Grid.Row="2" Background="#1e1e1e" BorderBrush="#3e3e42" BorderThickness="0,1,0,0">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="📋 Activity Log" 
                           FontSize="14" FontWeight="SemiBold" Foreground="#999"
                           Grid.Row="0"/>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" 
                              HorizontalScrollBarVisibility="Auto">
                    <TextBox Text="{Binding LogText, Mode=OneWay}" 
                             Background="Transparent" Foreground="#dcdcdc"
                             BorderThickness="0" IsReadOnly="True"
                             TextWrapping="Wrap" FontFamily="Consolas" FontSize="11"/>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Page>