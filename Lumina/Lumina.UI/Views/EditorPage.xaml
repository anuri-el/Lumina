<Page x:Class="Lumina.UI.Views.EditorPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lumina.UI.Views"
        mc:Ignorable="d"
        Title="EditorPage" Height="450" Width="800">
    <Grid Background="#eeeeee">
        <!-- 
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Editor Page" FontSize="22" FontWeight="Bold" Margin="0,0,0,20"/>
            <Image x:Name="PreviewImage" Width="400" Height="300" Stretch="Uniform"/>
            <TextBlock x:Name="InfoText" Text="No image loaded" Margin="0,20,0,0" TextAlignment="Center"/>
        </StackPanel>
        -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Background="#efefef" Grid.Column="0" >
            <TextBlock Text="Інструменти" FontWeight="Bold" Margin="0 0 0 8"/>
            <Button Content="Обернути" Command="{Binding RotateCommand}"/>
            <Button Content="Масштабувати" Command="{Binding ScaleCommand}"/>
            <Button Content="Ефект" Command="{Binding ApplyEffectCommand}"/>
            <Button Content="Зберегти" Command="{Binding SaveCommand}" />
        </StackPanel>

        <Canvas Grid.Column="1" Background="White">
            <Image x:Name="PreviewImage" Width="400" Height="300" Stretch="Uniform"/>
            <TextBlock x:Name="InfoText" Text="No image loaded" Margin="0,330,0,0" TextAlignment="Center"/>
        </Canvas>
    </Grid>
</Page>
