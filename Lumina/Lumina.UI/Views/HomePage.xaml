<Page x:Class="Lumina.UI.Views.HomePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lumina.UI.Views"
        mc:Ignorable="d"
        Title="HomePage" Height="450" Width="800">
    <Grid Background="#f2f2f2" VerticalAlignment="Center" HorizontalAlignment="Center">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
            <TextBlock Text="Lumina Editor" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" />
            <Button Content="Open Editor" Width="220" Height="40" Click="OpenEditor_Click" />
