            <Button Content="Відкрити зображення" Command="{Binding OpenImageCommand}" Height="40" />
            <Button Content="Новий колаж" Command="{Binding OpenImageCommand}" Height="40" />
            <Button Content="Перейти до редактора" Command="{Binding OpenImageCommand}" Height="40" />
-->
        </StackPanel>
        
    </Grid>
</Page>
