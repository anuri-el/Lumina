<Page x:Class="Lumina.UI.Views.HomePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lumina.UI.Views"
        mc:Ignorable="d"
        Title="HomePage" Height="450" Width="800">
    <Grid Background="#1e1e1e">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="400">
            <TextBlock Text="✨ Lumina Editor" FontSize="36" FontWeight="Bold" 
                       TextAlignment="Center" Margin="0,0,0,40" Foreground="White"/>

            <TextBlock Text="Choose your workspace:" FontSize="14" 
                       Foreground="#999" TextAlignment="Center" Margin="0,0,0,20"/>

            <Button Content="🖼️ Local Editor" 
                    Command="{Binding OpenEditorCommand}" 
                    Height="60" FontSize="18" Margin="0,0,0,15"
                    Background="#2d2d30" Foreground="White" BorderBrush="#3e3e42">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            BorderBrush="{TemplateBinding BorderBrush}" 
                                            BorderThickness="1" CornerRadius="5">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                         VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#3e3e42"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>

            <Button Content="🌐 Server Editor" 
                    Command="{Binding OpenServerEditorCommand}" 
                    Height="60" FontSize="18" Margin="0,0,0,15"
                    Background="#007acc" Foreground="White" BorderBrush="#005a9e">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            BorderBrush="{TemplateBinding BorderBrush}" 
                                            BorderThickness="1" CornerRadius="5">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                         VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#005a9e"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>

            <Button Content="❌ Exit" 
                    Command="{Binding ExitCommand}" 
                    Height="50" FontSize="16" Margin="0,20,0,0"
                    Background="#d32f2f" Foreground="White" BorderBrush="#b71c1c">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            BorderBrush="{TemplateBinding BorderBrush}" 
                                            BorderThickness="1" CornerRadius="5">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                         VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#b71c1c"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>

            <TextBlock Text="Local Editor - Work offline with images on your computer" 
                       FontSize="11" Foreground="#666" TextAlignment="Center" 
                       Margin="0,30,0,5" TextWrapping="Wrap"/>
            <TextBlock Text="Server Editor - Sync and collaborate through cloud server" 
                       FontSize="11" Foreground="#666" TextAlignment="Center" 
                       TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Page>